= form_for @invoice_invoice_detail do |f|
  - if @invoice_invoice_detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice_invoice_detail.errors.count, "error")} prohibited this invoice_invoice_detail from being saved:"
      %ul
        - @invoice_invoice_detail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :invoice
    = f.text_field :invoice
  .field
    = f.label :invoice_detail
    = f.text_field :invoice_detail
  .field
    = f.label :remarks
    = f.text_area :remarks
  .actions
    = f.submit 'Save'
