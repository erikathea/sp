= form_for @invoice_invoice_detail do |f|
  - if @invoice_invoice_detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice_invoice_detail.errors.count, "error")} prohibited this invoice_invoice_detail from being saved:"
      %ul
        - @invoice_invoice_detail.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :invoice
    = f.text_field :invoice, class: 'form-control'
  .field.form-group
    = f.label :invoice_detail
    = f.text_field :invoice_detail, class: 'form-control'
  .field.form-group
    = f.label :remarks
    = f.text_area :remarks, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
