= form_for @invoice do |f|
  - if @invoice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice.errors.count, "error")} prohibited this invoice from being saved:"
      %ul
        - @invoice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = label_tag 'Patient'
    = select_tag 'patient_id',
      options_from_collection_for_select(Patient.all, 'id', 'full_name')
  .field
    = f.label :total_amt_due
    = f.text_field :total_amt_due
  .field
    = f.label :amt_received
    = f.text_field :amt_received
  .field
    = f.label :status
    = f.select :status, options_for_select(["Full Payment", "Partial Payment", "Downpayment"])
  .actions
    = f.submit 'Save'
