%h1 Listing procedures

%table.table-responsive
  %tr.info
    %th Procedure
    %th Tooth no
    %th Remarks
    %th Date
    %th Patient
    %th
    %th
    %th

  - @procedures.each do |procedure|
    %tr
      %td= procedure.procedure
      %td= procedure.tooth_no
      %td= procedure.remarks
      %td= procedure.date
      %td= procedure.patient
      %td= link_to 'Show', procedure
      %td= link_to 'Edit', edit_procedure_path(procedure)
      %td= link_to 'Destroy', procedure, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Procedure', new_patient_procedure_path, class: 'btn btn-primary'
